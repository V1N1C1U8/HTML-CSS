@import url('https://fonts.googleapis.com/css2?family=Kanit:wght@500&family=Lato:wght@700&family=Roboto+Mono&family=Rubik:ital,wght@1,300&family=Staatliches&display=swap');
font-family: 'Kanit', sans-serif;
font-family: 'Lato', sans-serif;
font-family: 'Roboto Mono', monospace;
font-family: 'Rubik', sans-serif;
font-family: 'Staatliches', cursive;


  *{
	margin: 0px;
	padding: 0;
	box-sizing: border-box;
 }
 body{
	margin:0px;
	
 }
 
 /*Cabeçalho da pagina e menu de navegação*/
 
 
 #container-menu{
	display:flex;
	justify-content: space-between;
	align-items: center;
	background-color:#041E2F;
 }
 
 
 .menu-item{
	padding: 12px;
	margin:0px;
	color:#F1F5F7;
	text-decoration: none;
	color:#F1F5F7;
	text-decoration: none;
	font-family: 'Roboto Mono', monospace;
	font-size: 15px;

 }
 
 .menu-titulo{
	margin:0px;
	border-left: 10px;
	padding:12px;
	color:#F1F5F7;
	font-family: 'Roboto Mono', monospace;
	font-size: 25px;
 }
 
 
 /*Conteudo principal da pagina*/
 
#container-conteudo{
	padding-top: 75px;
	padding-right: 55px;
	padding-left: 55px;
	padding-bottom: 75px;
	background: rgb(4,30,47);
	background: linear-gradient(0deg, rgba(4,30,47,1) 30%, rgba(7,39,60,1) 52%, rgba(15,61,91,1) 80%);
	
}

 .container-apresentação{
	display: flex;
	gap: 60px;
	text-align: justify;
	align-items: center;
	justify-content: space-evenly;
	padding-bottom: 100px;
 }
 
 
 .apresentação-texto{
	font-family: 'Roboto Mono', monospace;
	font-size: 35px;
	line-height:45px;
	color: white;
 }
 
 .apresentação-imagem{
	border-radius: 100%;
 }
 
 .container-introducao{
	font-family: 'Roboto Mono', monospace;
	color: white;
	font-size: 18px;
	line-heigth: 70px;
 }
 .container-cards{
	display: grid;
	grid-template-columns: 365px 365px 365px;
	padding: 30px;
	column-gap: 20px;
 }
 
 .cards{
	border: 1px solid white;
	padding: 20px;
	font-size: 30px;
	text-align: center;
 }
 
 
 